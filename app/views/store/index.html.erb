 <% @categories.each do |category| %>
   <%=link_to category.title, category_path(category) %>
 <% end %>

<% @items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.to_frac(item.price)) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>

<% if @user && @user.current_cart %>
<%= link_to 'Cart', @user.current_cart %>
<% end %>
